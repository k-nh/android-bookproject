<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ly_message_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:id="@+id/ly_message_item_dest"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="#333333"></TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello android"
        android:layout_below="@+id/tv_name"
        android:layout_toLeftOf="@id/cv_profile"
        android:layout_marginLeft="16dp"
        android:padding="12dp"
        android:maxWidth="250dp"
        android:background="@drawable/box_background"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/tv_chat_time"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="1/2 01:05"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_toLeftOf="@+id/tv_message"
        android:layout_marginRight="8dp"
        android:layout_alignBottom="@id/tv_message"/>

</LinearLayout>