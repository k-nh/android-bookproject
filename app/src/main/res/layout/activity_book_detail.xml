<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_book_img_detail"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_gravity="left"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_photo_24"></ImageView>


        <TextView
            android:id="@+id/tv_book_title_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/tv_search_book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="author"></TextView>

        <TextView
            android:id="@+id/tv_search_book_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="publisher"></TextView>


        <TextView
            android:id="@+id/tv_search_book_pubdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="pubdate"></TextView>

        <TextView
            android:id="@+id/tv_description_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="description~~~~~~~~"></TextView>


        <Button
            android:id="@+id/btn_review_write_detail"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="도서 감상문 작성하기"
            android:textColor="@color/white"
            android:padding="10dp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:background="@drawable/round_shape"></Button>

    </LinearLayout>

</LinearLayout>